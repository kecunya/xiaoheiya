<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_means"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:background="@color/DarkGray"
    tools:context="com.example.listviewtest.means">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/icon_sky1">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/icon_header"
        android:layout_above="@+id/mail"
        android:layout_marginTop="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="小黑呀"
            android:textColor="#fff"
            android:textSize="30dp"/>
        <TextView
            android:id="@+id/girl"
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:text="  我们都梦想着天边奇妙玫瑰园，而不去欣赏开在窗口的玫瑰花。"
            android:textStyle="italic"
            android:textColor="#fff"
            android:background="@null"
            android:textSize="14sp" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="1309750283"
            android:textSize="15dp"
            android:textColor="#000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="男  20岁  外星座  美国-克利夫兰"
            android:textSize="15dp"
            android:textColor="#000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SVIP8   3.2倍加速中"
            android:textColor="#ff0000"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="15dp"
            android:gravity="left|center"
            android:background="#11000000"
            android:textSize="18dp"
            android:text="小黑呀的空间"
            android:textColor="#000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="精选照片"
            android:textColor="#000"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="101dp"
            android:layout_height="117dp"
            android:layout_gravity="left"
            android:src="@drawable/bg_2"/>
            <ImageView
                android:id="@+id/image1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:src="@drawable/bg_4"/>
            <ImageView
                android:id="@+id/image2"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:src="@drawable/bg_7"/>
            <ImageView
                android:id="@+id/image3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:src="@drawable/bg_8"/>
        </LinearLayout>

        <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" android:background="#11000000"
        android:text="更多兴趣"
        android:textSize="22dp"
        android:textColor="#000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="个性签名"
            android:textSize="22dp"
            android:textColor="#000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:text="努力使自己强大"
            android:textStyle="italic"
            android:textSize="30dp"
            android:textColor="#fff"
            android:background="@drawable/icon_girl"/>
    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="1">
        <Button
            android:id="@+id/sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="语音通话"
            android:textSize="20dp"
            android:background="#fff"
            android:layout_weight="0.5" />
        <Button
            android:id="@+id/dopeall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:text="发送消息"
            android:textSize="20dp"
            android:background="#84c1ff"
            android:layout_weight="0.5" />
    </LinearLayout>
</RelativeLayout>
