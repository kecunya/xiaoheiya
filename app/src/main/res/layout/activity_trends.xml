<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_trends"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.listviewtest.trends"
    android:orientation="vertical"
    android:background="@color/DarkGray"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical"
        android:gravity="left"
        android:background="@drawable/icon_sky1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/icon_header"
            android:layout_above="@+id/mail"
            android:layout_marginTop="115dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:text="小黑呀"
            android:background="#00000000"
            android:textColor="#fff"
            android:textSize="30dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/girl"
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_alignParentBottom="true"
            android:text="  我们都梦想着天边奇妙玫瑰园，而不去欣赏开在窗口的玫瑰花。"
            android:textStyle="italic"
            android:textColor="#fff7"
            android:background="@null"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:text="还没有动态哦"
            android:textSize="20dp"
            android:textColor="#fff"/>
        <Button
            android:id="@+id/choose_from_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#11000000"
            android:text="看看照片"/>
        <Button
            android:id="@+id/take_photo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#11000000"
            android:text="拍照"/>
        <ImageView
            android:id="@+id/picture"
            android:layout_width="wrap_content"
            android:layout_height="100dp"/>
    </LinearLayout>
</LinearLayout>
